<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BankingApp.MAUI.MainPage"
             xmlns:vm="clr-namespace:BankingApp.MAUI.ViewModels">

    <ContentPage.BindingContext>
        <vm:BeneficiaryViewModel/>
    </ContentPage.BindingContext>

    <ScrollView>
        <StackLayout Padding="20">
            <CollectionView ItemsSource="{Binding Beneficiaries}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Padding="10">
                            <Label Text="{Binding Id}" FontSize="18" />
                            <Label Text="{Binding Name}" FontSize="14" />
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ScrollView>

</ContentPage>

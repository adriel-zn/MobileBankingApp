<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BankingApp.Mobile.Views.BeneficiaryPage"
             xmlns:vm="clr-namespace:BankingApp.Mobile.ViewModels"
             Title="Beneficiary">
    <ContentPage.BindingContext>
        <vm:BeneficiaryViewModel />
    </ContentPage.BindingContext>

    <StackLayout Padding="20">
        <Button Text="Load Beneficiaries" Command="{Binding LoadBeneficiariesCommand}" />
        <CollectionView ItemsSource="{Binding Beneficiaries}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Padding="10">
                        <Label Text="{Binding Name}" FontSize="18" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>
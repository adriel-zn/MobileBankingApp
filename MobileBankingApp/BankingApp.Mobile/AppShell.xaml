<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BankingApp.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BankingApp.Mobile"
    xmlns:view="clr-namespace:BankingApp.Mobile.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="Mobile Banking App">

    <Shell.FlyoutHeader>
        <Border BackgroundColor="Grey" StrokeThickness="0">
            <Grid ColumnDefinitions="Auto, *" Padding="25" ColumnSpacing="20">
                <Label Grid.Column="0"
                       Text="Mobile Banking App"
                       VerticalTextAlignment="Center"
                       FontSize="28"
                       FontAttributes="Bold"
                       TextColor="DarkBlue"></Label>

            </Grid>
        </Border>
    </Shell.FlyoutHeader>
    
    <ShellContent
         Title="Home"
         ContentTemplate="{DataTemplate local:MainPage}"
         Route="MainPage" />

    <ShellContent
        Title="Beneficiaries"
        ContentTemplate="{DataTemplate view:Beneficiary}"
        Route="Beneficiary" />


</Shell>

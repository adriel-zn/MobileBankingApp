<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BankingApp.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BankingApp.Mobile.Views"
    xmlns:controls="clr-namespace:BankingApp.Mobile.Controls"
    Shell.FlyoutBehavior="Flyout"
    Title="Mobile Banking App">

    <Shell.FlyoutHeader>
        <Border BackgroundColor="#ddd"
                StrokeThickness="0">
            <Grid ColumnDefinitions="Auto, *"
                    Padding="25"
                  ColumnSpacing="20">
                <Image Grid.Column="0"
                Source="dotnet_bot.png"
                   Aspect="AspectFill"
                   HeightRequest="50"
                   WidthRequest="50"/>

                <Label Grid.Column="1"
                   Text="Abhay Prince"
                   VerticalTextAlignment="Center"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="#333333"/>
            </Grid>
        </Border>
    </Shell.FlyoutHeader>


    <Shell.FlyoutContent>
        <controls:CustomFlyoutContent />
    </Shell.FlyoutContent>

    <Shell.FlyoutFooter>
        <Label Text="Copyright | Abhay Prince"
               BackgroundColor="AliceBlue"
               HorizontalTextAlignment="Center"
               Padding="0, 10"/>
    </Shell.FlyoutFooter>

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems" Route="ParentRoute">
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />

        <ShellContent
            Title="Menu 2"
            Icon="dotnet_bot.png"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage1" />

        <ShellContent
            Icon="dotnet_bot.png"
            Title="Menu 3"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage2" />

        <ShellContent
            Title="Menu 4"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage3" />
    </FlyoutItem>
</Shell>
